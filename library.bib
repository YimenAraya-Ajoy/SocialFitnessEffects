keywords = {developmental effects,fitness,ontogeny,phenotypic plasticity,phenotypic variability,senescence},
pages = {20151050},
pmid = {26336173},
title = {{An ontogenetic perspective on individual differences}},
volume = {282},
year = {2015}
}
