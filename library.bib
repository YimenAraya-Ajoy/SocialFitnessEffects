journal = {Evolution},
number = {3},
pages = {967--976},
publisher = {[Society for the Study of Evolution, Wiley]},
title = {{Perspective: Complex Adaptations and the Evolution of Evolvability}},
url = {http://www.jstor.org/stable/2410639},
volume = {50},
year = {1996}
}
@article{Hansen2003,
