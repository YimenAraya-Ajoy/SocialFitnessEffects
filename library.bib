doi = {10.1098/rspb.2015.1050},
file = {:home/yi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Senner, Conklin, Piersma - 2015 - An ontogenetic perspective on individual differences.pdf:pdf},
