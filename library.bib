isbn = {1010-061X},
issn = {1010061X},
journal = {Journal of Evolutionary Biology},
keywords = {Energy partitioning models,Fecundity function,Insects,Senescence},
number = {5},
pages = {835--840},
title = {{Role of ageing and temperature in shaping reaction norms and fecundity functions in insects}},
volume = {14},
