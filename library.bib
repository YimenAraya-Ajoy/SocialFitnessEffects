issn = {00335770},
journal = {The Quarterly Review of Biology},
number = {2},
pages = {137--154},
publisher = {JSTOR},
title = {{Optimal foraging: a selective review of theory and tests}},
url = {http://www.journals.uchicago.edu/doi/abs/10.1086/409852},
volume = {52},
year = {1977}
}
