@article{doi:10.1111/jeb.12044,
abstract = {Abstract Knowledge of the genetic variances and covariances of traits (the Gâmatrix) is fundamental for the understanding of evolutionary dynamics of populations. Despite its essential importance in evolutionary studies, empirical tests of the temporal stability of the Gâmatrix in natural populations are few. We used a 25âyearâlong individualâbased field study on almost 7000 breeding attempts of the collared flycatcher (Ficedula albicollis) to estimate the stability of the Gâmatrix over time. Using animal models to estimate G for several time periods, we show that the structure of the timeâspecific Gâmatrices changed significantly over time. The temporal changes in the Gâmatrix were unpredictable, and the structure at one time period was not indicative of the structure at the next time period. Moreover, we show that the changes in the timeâspecific Gâmatrices were not related to changes in mean trait values or due to genetic drift. Selection, differences in acquisition/allocation patterns or environmentâdependent allelic effects are therefore likely explanations for the patterns observed, probably in combination. Our result cautions against assuming constancy of the Gâmatrix and indicates that even shortâterm evolutionary predictions in natural populations can be very challenging.},
author = {Bj{\"{o}}rklund, Mats and Husby, Arild and Gustafsson, Lars},
