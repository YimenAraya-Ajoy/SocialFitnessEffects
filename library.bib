doi = {10.1002/evl3.118},
file = {:home/yi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Reid et al. - 2019 - Individuals' expected genetic contributions to future generations, reproductive value, and short-term metrics of.pdf:pdf},
issn = {2056-3744},
journal = {Evolution Letters},
keywords = {ductive success,evolutionary dynamics,fitness,gene-dropping,genealogy,individual reproductive value,lifespan,lifetime repro-,pedigree,population growth rate},
number = {3},
pages = {271--285},
title = {{ Individuals' expected genetic contributions to future generations, reproductive value, and short-term metrics of fitness in free-living song sparrows ( Melospiza melodia ) }},
volume = {3},
