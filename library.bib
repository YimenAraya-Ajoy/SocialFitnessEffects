journal = {Proceedings. Biological sciences / The Royal Society},
keywords = {Animals,Biological Evolution,Genetic Variation,Personality,Personality: physiology,Predatory Behavior,Predatory Behavior: physiology,Smegmamorpha,Smegmamorpha: genetics,Smegmamorpha: physiology},
